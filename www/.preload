local function log(iserr,fmts,...)
   local msg=fmt("BACME: "..fmts,...)
   tracep(false,iserr and 0 or 2,msg)
   if mako.daemon then
      local op = iserr and {flush=true,subject="BACME Error"} or {ts=true}
      mako.log(msg,op)
   end
   return nil, msg
end
